{
  "name": "ai",
  "version": "1.1.0",
  "description": "AI-powered terminal command interpreter",
  "main": "dist/index.js",
  "license": "MIT",
  "bin": {
    "ai": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "test": "echo \"No tests specified yet\"",
    "install:global": "npm run build && npm install -g .",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "setup": "npm install && npm run build",
    "watch": "chokidar \"src/**/*.ts\" -c \"npm run install:global\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ai",
    "terminal",
    "cli",
    "openai",
    "claude",
    "gemini",
    "ollama",
    "assistant"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.24.0",
    "@types/node": "^22.14.0",
    "chalk": "4.1.2",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "inquirer": "^12.5.0",
    "ollama": "^0.5.14",
    "openai": "^4.91.1",
    "tiktoken": "^1.0.20",
    "typescript": "^5.8.2",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/yaml": "^1.9.7",
    "chokidar": "^4.0.3",
    "ts-node": "^10.9.2"
  }
}
